<div class="couch_background">
  <div class="auth_container">

      <div class='auth_head' >
        <div class="head_links">
          <%= link_to 'Log in', new_user_session_path, class: "#{current_page?(new_user_session_path) ? 'active' : ""}" %>
          <%= link_to 'Sign Up', new_user_registration_path, class: "#{current_page?(new_user_registration_path) ? 'active' : ""}" %>
        </div>
        <hr>
      </div>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="auth_inner">
          <%= f.input :email,
                      required: true,
                      placeholder: 'Email',
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: true,
                      placeholder: 'Password',
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable?%>
        </div>

        <div class="btn_wrapper">
          <%= f.button :submit, "Log in" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

  </div>
</div>
