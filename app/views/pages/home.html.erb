<div class="main_container full_height">
  <div class="wrapper">
      <table>
        <thead>
          <tr>
            <th>name</th>
            <th>year</th>
            <th>main</th>
          </tr>
        </thead>
        <tbody>
          <% @torrents.each do |torrent| %>
            <tr>
              <td class='left'><a href="<%= torrent.url %>" target="_blank"><%= torrent.title %></a></td>
              <td><%= torrent.release_year %></td>
              <td><%= torrent.main == 't' ? 'yes' : 'no' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
